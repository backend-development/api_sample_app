<h2>Log in</h2>

<%= mdl_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.email_field :email,  autocomplete: "email" %><br>
  <%= f.password_field :password, autocomplete: "password" %><br>
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %><br>
  <% end %>
  <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"  %>
<% end %>

<%= render "devise/shared/links" %>
