<h2>Sign up</h2>

<%= mdl_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.text_field :name, autofocus: true %><br>
  
    <%= f.email_field :email,  autocomplete: "email" %><br>
  
    <%= f.password_field :password, autocomplete: "new-password" %><br>
 
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
 
    <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
 
<% end %>

<%= render "devise/shared/links" %>
